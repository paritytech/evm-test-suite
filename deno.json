{
    "tasks": {
        "build": "deno run --allow-all src/build-contracts.ts",
        "test": "deno test --allow-all --no-check src/all-tests.ts",
        "test:full": "START_GETH=1 START_REVIVE_DEV_NODE=1 START_ETH_RPC=1 deno test --allow-all --no-check --permit-no-files src/all-tests.ts",
        "lint": "deno fmt --check && deno lint"
    },
    "test": {
        "include": ["src/all-tests.ts"]
    },
    "imports": {
        "viem": "npm:viem@^2.38.0",
        "viem/": "npm:/viem@^2.38.0/",
        "solc": "npm:solc@^0.8.28",
        "@parity/resolc": "npm:@parity/resolc@^0.2.0",
        "@std/assert": "jsr:@std/assert@^1",
        "@std/expect": "jsr:@std/expect@^1",
        "@std/testing": "jsr:@std/testing@^1",
        "@std/path": "jsr:@std/path@^1"
    },
    "compilerOptions": {
        "strict": true
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": true,
        "proseWrap": "preserve"
    },
    "nodeModulesDir": "auto"
}
