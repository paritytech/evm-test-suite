{
    "name": "demo",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "build": "npx tsx src/build-contracts.ts",
        "test": "vitest --test-timeout=30000 --no-file-parallelism --bail 1",
        "test:update": "vitest run --reporter=verbose --test-timeout=30000 --no-file-parallelism --update",
        "test-init": "vitest run --reporter=verbose --test-timeout=30000 --no-file-parallelism",
        "lint": "prettier --plugin=prettier-plugin-solidity --check . --write",
        "solhint": "solhint \"contracts/**/*.sol\""
    },
    "dependencies": {
        "@parity/resolc": "^0.0.1",
        "@redstone-finance/evm-connector": "^0.6.2",
        "ethers": "^5.6.9",
        "prettier": "^3.5.1",
        "solc": "^0.8.28",
        "viem": "^2.22.4",
        "vitest": "^3.0.6"
    },
    "devDependencies": {
        "typescript": "^5.7.2",
        "solhint": "^5.0.5",
        "prettier": "^3.5.1",
        "prettier-plugin-solidity": "^1.4.2"
    }
}
